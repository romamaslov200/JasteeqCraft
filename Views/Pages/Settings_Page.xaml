<Page x:Class="JasteeqCraft.Views.Pages.Settings_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JasteeqCraft.Views.Pages"
      mc:Ignorable="d" 
      
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      d:DesignHeight="420" d:DesignWidth="730"

      Title="Настройки">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border x:Name="border"
                    Grid.Column="1"
                    Background="{DynamicResource CardBg}"
                    Margin="30,10,30,10"
                    CornerRadius="20"
                    Padding="6"
                    BorderBrush="#44FFFFFF"
                    BorderThickness="1">
                <StackPanel
                VerticalAlignment="Center"
                Width="300">
                    <Label Content="Аккаунты"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="DemiBold"
                           Foreground="#fff"/>
                    <Border Margin="30,10,30,10"
                            CornerRadius="10"
                            Padding="2"
                            BorderBrush="#44FFFFFF"
                            BorderThickness="2">
                        <StackPanel>
                            <ScrollViewer MinHeight="50"
                                      MaxHeight="120"
                                      VerticalScrollBarVisibility="Hidden"
                                      HorizontalScrollBarVisibility="Hidden">
                                <ItemsControl VerticalAlignment="Center" ItemsSource="{Binding NickNameList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding}"
                                                     Foreground="#fff"
                                                     Margin="1"
                                                     GroupName="NickNameRadio"
                                                     Checked="NickRadioButton_Checked"
                                                     HorizontalAlignment="Center">
                                                <RadioButton.Template>
                                                    <ControlTemplate TargetType="RadioButton">
                                                        <Border x:Name="border"
                                                    Background="Transparent"
                                                    Padding="10,5,10,5">
                                                            <ContentPresenter VerticalAlignment="Center" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF" />
                                                                <!-- Полупрозрачный белый -->
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#22FFFFFF" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </RadioButton.Template>
                                            </RadioButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Content="+"
                                        Name="AccaundAddButton"
                                        Height="30"
                                        Grid.Column="0"
                                        Style="{DynamicResource MainButton}" Click="AccaundAddButton_Click"
                                        />
                                <Button Content="-" 
                                        Height="30"
                                        Style="{DynamicResource MainButton}"
                                        Click="AccaundRemoveButton_Click"
                                        Grid.Column="1"/>
                            </Grid>
                            <TextBox Height="30"
                                     VerticalContentAlignment="Center"
                                     Style="{DynamicResource MainTextBox}"
                                     Name="TextBox_AddNick"
                                     Margin="10,10,10,0"
                                     Cursor=""
                                     />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,2,0,10">
                                <RadioButton Name="Microsoft"
                                             Content="Microsoft"
                                             Foreground="#fff"
                                             Margin="0"
                                             FontSize="10"
                                             GroupName="NickType"
                                             Checked="NickType_RadioButton_Checked"
                                             HorizontalAlignment="Center">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border"
                                                    BorderBrush="#44FFFFFF"
                                                    BorderThickness="2,2,1,2"
                                                    CornerRadius="10,0,0,10"
                                                    Background="{DynamicResource SelectTypeNick}"
                                                    Padding="30,5,30,5">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#33FFFFFF" />
                                                    <!-- Полупрозрачный белый -->
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#22FFFFFF" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton Grid.Column="1"
                                             Name="Обычный"
                                             Content="Обычный"
                                             Foreground="#fff"
                                             Margin="0"
                                             FontSize="10"
                                             GroupName="NickType"
                                             Checked="NickType_RadioButton_Checked"
                                             HorizontalAlignment="Stretch"
                                             >
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border"
                                                    BorderBrush="#44FFFFFF"
                                                    BorderThickness="1,2,2,2"
                                                    CornerRadius="0,10,10,0"
                                                    Background="{DynamicResource SelectTypeNick}"
                                                    Padding="30,5,30,5">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#33FFFFFF" />
                                                    <!-- Полупрозрачный белый -->
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#22FFFFFF" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <!--
                                <Button Grid.Column="0" Content="Microsoft" FontSize="10"/>
                                <Button Grid.Column="1" Content="Обычный" FontSize="10"/>
                                 -->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <Border Grid.Column="0"
                    Background="{DynamicResource CardBg}"
                    Margin="30,10,30,10"
                    CornerRadius="20"
                    Padding="6"
                    BorderBrush="#44FFFFFF"
                    BorderThickness="1">
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Width="300">

                    <Label Content="Тема"
                   Foreground="#fff"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
                    <StackPanel Margin="0,0,0,20"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                        <RadioButton Name="Dark"
                             Content="Dark"
                             Foreground="White"
                             Margin="0, 0, 10, 0"
                             GroupName="ThemeGroup"
                             Checked="RadioButton_Checked"/>

                        <RadioButton Name="Pink"
                             Content="Pink"
                             Foreground="White"
                             Margin="0, 0, 0, 0"
                             Checked="RadioButton_Checked"
                             GroupName="ThemeGroup"/>
                    </StackPanel>



                    <Label Content="Оперативная память: "
                   Foreground="#fff"
                   Name="Vram_Lable"/>
                    <Slider TickFrequency="500"
                    IsSnapToTickEnabled="True"
                    Name="VramSlider"
                    ValueChanged="VramSlider_ValueChanged"/>
                    <Grid Margin="0, 20, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button
                    Style="{DynamicResource BtnNav}"
                    Margin= "0, 0, 0, 0"
                    Background="#0000"
                    BorderBrush="#0000"
                    Cursor="Hand"
                    Width="25"
                    Height="25"
                    VerticalAlignment="Center"
                    Click="MinecraftPatch"
                    HorizontalAlignment="Left">

                            <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Source="pack://application:,,,/Views/Resurces/Images/folder-svgrepo-com.svg">
                            </svgc:SvgViewbox>
                        </Button>

                        <TextBlock Grid.Column="1"  Text="Путь устоновки сборки:"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           
                           Foreground="#fff"/>
                        <TextBlock Grid.Column="2"
                           Text="Путь устоновки сборки:"
                           Name="PatchLable"
                           FontSize="10"
                           TextAlignment="Left"
                            VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="#fff"/>
                    </Grid>

                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>
