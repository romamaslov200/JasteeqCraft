<Page x:Class="JasteeqCraft.Views.Pages.Home_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JasteeqCraft.Views.Pages"
      mc:Ignorable="d" 
      
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      
      
      d:DesignHeight="420" d:DesignWidth="730"
      
      Background="#171717"
      
      Title="Home_Page">

    <Page.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style x:Key="TransparentListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <ScrollViewer Background="Transparent">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TransparentListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="340"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                
            </StackPanel>
            
                <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="450"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Border Background="#4c4c4c"
                            Padding="10"
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#fff">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Grid Width="70" Height="70" ClipToBounds="True">
                                <!-- Изображение (на фоне) -->
                                <Image Source="/Views/Resurces/Images/ServerIco.jpg"
                                       Stretch="Fill"
                                       Width="66"
                                       Height="66"/>

                                <!-- Border сверху -->
                                <Border CornerRadius="5"
                                        BorderThickness="2"
                                        BorderBrush="White"
                                        Background="Transparent"/>
                                <!-- Прозрачный фон, чтобы не перекрывать изображение -->
                            </Grid>
                            <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <Label Content="JasteeqCraft"
                                       Foreground="#fff"
                                       FontSize="14"
                                       HorizontalAlignment="Center"/>
                                <Label Content=""
                                       Name="OnlineLable"
                                   Foreground="#fff"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ListView x:Name="PostsList"
                                  Grid.Row="0"
                                  Margin="10"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  Style="{StaticResource TransparentListViewStyle}"
                                  ItemContainerStyle="{StaticResource TransparentListViewItemStyle}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#4c4c4c"
                                            CornerRadius="20"
                                            BorderThickness="2"
                                            BorderBrush="#fff">
                                        <StackPanel VerticalAlignment="Center">
                                            <!-- Дата и просмотры - компактно
                                            <Grid Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Date}" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding Views}" Foreground="Gray" FontSize="12" HorizontalAlignment="Right"/>
                                            </Grid>
                                            -->
                                            

                                            <!-- Галерея изображений с фиксированной высотой -->
                                            <ItemsControl ItemsSource="{Binding ImageUrls}" 
                                                           Margin="0,5">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Width="400" Margin="0,10,0,0" Height="250">
                                                            <Rectangle RadiusX="20" RadiusY="20"/>
                                                            <Image Source="{Binding}"
                                                                   Stretch="Fill"
                                                                   Width="400" Height="250">
                                                                <Image.Clip>
                                                                    <RectangleGeometry Rect="0,0,400,250"
                                                                                       RadiusX="20"
                                                                                       RadiusY="20"/>
                                                                </Image.Clip>
                                                            </Image>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- Видео с фиксированными размерами -->
                                            <MediaElement Visibility="{Binding VideoUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                                         MaxHeight="100"
                                                         MaxWidth="200"
                                                         Stretch="Uniform"
                                                         Margin="0,5"
                                                         LoadedBehavior="Manual" 
                                                         UnloadedBehavior="Stop"/>
                                            <!-- Текст поста с ограничением ширины -->
                                            <TextBlock Text="{Binding Text}"
                                                       TextAlignment="Center"
                                                       Foreground="#fff"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,10"
                                                       FontSize="16"
                                                       MaxWidth="600"
                                                       MaxHeight="60"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </StackPanel>
            </Grid>
            


            <StackPanel Grid.Row="2"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Right"
                            Margin="0,0,20,0">
                    <TextBlock Grid.Column="2"
                               Text=""
                               Foreground="#fff"
                               FontSize="12"
                               Name="StatusText"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </StackPanel>
                <ProgressBar x:Name="ProgressBarDownload"
                             Style="{StaticResource MainProgressBar}"
                             Height="5"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             IsIndeterminate="False" Cursor=""/>
            </StackPanel>

            <Grid Grid.Row="1"
                  Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <Button Cursor="Hand"
                            Name="LaunchButton"
                            Style="{StaticResource MainButton}"
                            Click="LaunchButton_Click"
                            Content="Играть"
                            Height="60"
                            Width="190"
                            HorizontalAlignment="Left"
                            />
                </StackPanel>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Margin="15,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Style="{DynamicResource BtnNav}"
                            Margin= "0, 0, 0, 0"
                            Background="#0000"
                            IsEnabled="False"
                            BorderBrush="#0000"
                            Width="25"
                            Height="25"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left">

                            <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Source="pack://application:,,,/Views/Resurces/Images/clock-history-svgrepo-com.svg">
                            </svgc:SvgViewbox>
                        </Button>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   FontSize="12"
                                   VerticalAlignment="Bottom"
                                   Padding="0"
                                   Content="Вы играли"
                                   Foreground="#fff"
                                   Cursor=""/>
                            <Label Grid.Row="1"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Padding="0"
                                   Name="TotalMinutesLable"
                                   Content="0 м."
                                   Foreground="#fff"
                                   Cursor=""/>
                        </Grid>
                    </Grid>

                </StackPanel>

                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center"
                            Margin="20,0,0,0">
                    <Label Content="Введите свой ник"
                           Foreground="#fff"/>
                    <TextBox Height="30"
                             VerticalContentAlignment="Center"
                             Style="{StaticResource MainTextBox}"
                             Name="Nick"
                             TextChanged="Nick_TextChanged" Cursor=""
                             />
                </StackPanel>
            </Grid>
            
        </Grid>
    </Border>
</Page>
