<Window x:Class="JasteeqCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JasteeqCraft"
        mc:Ignorable="d"
        
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        
        
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        
        
        
        
        
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MaxHeight="1000"
        MaxWidth="1000"
        Title="MainWindow" Height="450" Width="800">
    
    <Border>
        <Grid>
            <Border Height="450"
                    VerticalAlignment="Top"
                    BorderThickness="1,1,1,1"
                    BorderBrush="#fff"
                    CornerRadius="20, 20, 20, 20">
                <Border.Background>
                    <RadialGradientBrush 
                        Center="0.5,0.5" 
                        GradientOrigin="0.5,0.5" 
                        RadiusX="1" 
                        RadiusY="1">

                        <GradientStop Color="{DynamicResource App_Bg_GradientCenterColor}" Offset="0.0"/>
                        <!-- Центр -->
                        <GradientStop Color="{DynamicResource App_Bg__GradientEdgeColor}" Offset="1.0"/>
                        <!-- Края -->
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
            <Grid Height="30" VerticalAlignment="Top">
                <Border BorderThickness="1,1,1,0.9"
                        CornerRadius="20, 20, 0, 0"
                        BorderBrush="#fff">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="0,1">


                            <GradientStop Color="{DynamicResource App_Bg_GradientCenterColor}" Offset="0.0"/>
                            <!-- Центр -->
                            <GradientStop Color="{DynamicResource App_Bg__GradientEdgeColor}" Offset="1.0"/>
                            <!-- Края -->
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Button
                    Style="{DynamicResource BtnNav}"
                    Margin= "0, 0, 15, 0"
                    Background="#0000"
                    BorderBrush="#0000"
                    Width="15"
                    Height="15"
                    Cursor="Hand"
                    Click="Button_Cloase_Click"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                        <svgc:SvgViewbox Margin="0, 0, 0, 0"
                            VerticalAlignment="Center"
                             HorizontalAlignment="Right"
                            Source="pack://application:,,,/Views/Resurces/Images/Exit.svg">
                        </svgc:SvgViewbox>
                </Button>

                <Button
                    Style="{DynamicResource BtnNav}"
                    Margin= "0, 0, 40, 0"
                    Background="#0000"
                    BorderBrush="#0000"
                    Cursor="Hand"
                    Width="15"
                    Height="15"
                    Click="Button_Folding_Click"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

                    <svgc:SvgViewbox Margin="0, 10, 0, 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Source="pack://application:,,,/Views/Resurces/Images/folding.svg">
                    </svgc:SvgViewbox>
                </Button>
            </Grid>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="380"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="1,0,1,0"
                        BorderBrush="#fff"
                        Padding="3">
                    <Border.Background>
                        <RadialGradientBrush 
                        Center="0.5,0.5" 
                        GradientOrigin="0.5,0.5" 
                        RadiusX="0.9" 
                        RadiusY="0.9">

                            <GradientStop Color="{DynamicResource Menu_Bg_Gradient1}" Offset="0.0"/>
                            <!-- Центр -->
                            <GradientStop Color="{DynamicResource Menu_Bg__Gradient2}" Offset="0.95"/>
                            <!-- Края -->
                        </RadialGradientBrush>
                    </Border.Background>

                    <StackPanel Margin="0,0,15,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                       
                        <Border CornerRadius="15, 15, 15, 15"
                                Margin="0,0,10,0"
                                Padding="2"
                                BorderBrush="#fff" Cursor="">

                                <Button Padding="10,0,0,0"
                                        Style="{DynamicResource BtnNav}"
                                        Margin= "0, 0, 0, 0"
            
                                        Background="#0000"
                                        BorderBrush="#0000"
                                        Cursor="Hand"
                                        Click="Button_WebSite_Click"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                                     Width="15"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Source="pack://application:,,,/Views/Resurces/Images/globe-svgrepo-com.svg" Cursor="">
                                        </svgc:SvgViewbox>
                                        <Label Content="Сайт"
                                               Foreground="#fff"
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                        </Border>
                        
                        
                        <Border CornerRadius="15, 15, 15, 15"
                                Margin="0,0,10,0"
                                Padding="2"
                                BorderBrush="#fff" Cursor="">

                                <Button Padding="10,0,0,0"
                                        Style="{DynamicResource BtnNav}"
                                        Margin= "0, 0, 0, 0"
            
                                        Background="#0000"
                                        BorderBrush="#0000"
                                        Cursor="Hand"
                                        Click="Button_PageInfo_Click"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                                     Width="15"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Source="pack://application:,,,/Views/Resurces/Images/globe-svgrepo-com.svg" Cursor="">
                                        </svgc:SvgViewbox>
                                        <Label Content="Информация"
                                               Foreground="#fff"
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                        </Border>
                        
                        
                        <Border CornerRadius="15, 15, 15, 15"
                            Margin="0,0,10,0"
                            Padding="2"
                            BorderBrush="#fff" Cursor="">

                            <Button Padding="10,0,0,0"
                                    Style="{DynamicResource BtnNav}"
                                    Margin= "0, 0, 0, 0"
            
                                    Background="#0000"
                                    BorderBrush="#0000"
                                    Cursor="Hand"
                                    Click="Button_PageHome_Click"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                                 Width="15"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Source="pack://application:,,,/Views/Resurces/Images/Home.svg" Cursor="">
                                    </svgc:SvgViewbox>
                                    <Label Content="Главная"
                                           Foreground="#fff"
                                           VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        <Border CornerRadius="15, 15, 15, 15"
                                Padding="2"
                                BorderBrush="#fff" Cursor="">
                            <Button Padding="10,0,0,0"
                                    Style="{DynamicResource BtnNav}"
                                    Margin= "0, 0, 0, 0"
                                    
                                    Background="#0000"
                                    BorderBrush="#0000"
                                    Cursor="Hand"
                                    Click="Button_PageSettings_Click"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                        <svgc:SvgViewbox Margin="0, 0, 0, 0"
                                                 Width="15"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Source="pack://application:,,,/Views/Resurces/Images/settings.svg" Cursor="">
                                        </svgc:SvgViewbox>
                                        <Label Content="Настройки"
                                           Foreground="#fff"
                                           VerticalAlignment="Center"/>
                                    </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Border>

                <Frame x:Name="MainFrame"
                       Grid.Column="0"
                       Grid.Row="1"
                       NavigationUIVisibility="Hidden"
                       Source=""
                       Navigated="MainFrame_Navigated"
                       Margin="0,0,0,0"
                       JournalOwnership="OwnsJournal">
                </Frame>
            </Grid>
        </Grid>
    </Border>
    
    
